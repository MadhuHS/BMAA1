<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jspiders.needblood.UserDetailsActivity">


    <ImageView
        android:id="@+id/tvblood"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/blood"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:columnCount="2"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/tvnamelable"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="Name :"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvname"
            android:layout_width="match_parent"
            android:layout_gravity="fill_horizontal"
            android:text="xxxxxxxxxx"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvcontaclable"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Contact :"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvcontact"
            android:layout_width="match_parent"
            android:layout_gravity="fill_horizontal"
            android:text="1234567890"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvblodgrplable"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Group :"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvbloodgrp"
            android:layout_width="match_parent"
            android:layout_gravity="fill_horizontal"
            android:text="A+ve"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button android:id="@+id/btncall"
            android:layout_marginTop="10dp"
            android:layout_rowSpan="2"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:background="@drawable/call"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:layout_columnSpan="2"/>


    </GridLayout>


</RelativeLayout>
